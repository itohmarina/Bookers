<h1>Books</h1>
<div class="book-wrap">
 <% @books.each do |book| %>
   <div class="book-box">
    <span class="book-title"><%= book.title %></span>
    <span class="book-body"><%= book.body %></span>
    <%=link_to "Show", "/books/#{book.id}" %>
    <%=link_to "Edit", "/books/#{book.id}/edit" %>
    <%=link_to "Destroy", destroy_book_path(book.id),method: :delete, "data-confirm"=>"Are you sure?" %>
   </div>
 <% end %>
</div>

<% if @book.errors.any? %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<% newbook=Book.new %>
<%=form_with model:newbook, url:"/books/#{newbook.id}",method: :post do|f|%>
  <h4>Title</h4>
  <%= f.text_field:title %>

  <h4>Body</h4>
  <%=f.text_area :body%>

  <%=f.submit'Create Book'%>
<%end%>


