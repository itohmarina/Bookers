<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<% book_id=@book.id %>
<%=form_with model:@book, url:"/books/#{book_id}",method: :post do|f|%>
  <h4>Title</h4>
  <%= f.text_field:title %>
  <h4>Body</h4>
  <%=f.text_area :body %>

  <%=f.submit'Create Book'%>
<%end%>

<%= link_to 'Show',"/books/#{book_id}" %>
<%= link_to 'Back','/books' %>


