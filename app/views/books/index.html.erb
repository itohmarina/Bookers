<div class="book-wrap">
  <h1>Books</h1>

  <div class="title">
    <b>title</b>
  </div>
  <div class="body">
    <b>body</b>
  </div>


  <% @books.each do |book| %>
  <div class="book-box">
    <div class="book-title"><%= book.title %></div>
    <div class="book-body"><%= book.body %></div>
    <%=link_to "Show", "/books/#{book.id}" %>
    <%=link_to "Edit", "/books/#{book.id}/edit" %>
    <%=link_to "Destroy", destroy_book_path(book.id),method: :delete, "data-confirm"=>"Are you sure?" %>
  </div>
  <% end %>


  <% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <h2 class="new-book">New book</h2>
  <% newbook=Book.new %>
  <%=form_with model:newbook, url:"/books/#{newbook.id}",method: :post do|f|%>
    <p>Title</p>
    <%= f.text_field:title %>

    <p>Body</p>
    <%=f.text_area :body%>

    <%=f.submit'Create Book'%>
  <%end%>

</div>


